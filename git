# pre commit 

nano .git/hooks/pre-commit

chmod +x .git/hooks/pre-commit


# pest thic in pre-commit it automatically runs pint on commit
#!/bin/sh

echo "ğŸ”§ Running Laravel Pint (auto-fix)..."
./vendor/bin/pint

echo "â• Restaging updated files..."
git add .

echo "ğŸ” Running Laravel Pint (check mode)..."
./vendor/bin/pint --test
STATUS=$?

if [ $STATUS -ne 0 ]; then
    echo ""
    echo "âŒ Pint found formatting issues even after auto-fix."
    echo "Commit aborted."
    exit 1
fi

echo "âœ… Pint auto-fix, restaging, and check passed."
exit 0